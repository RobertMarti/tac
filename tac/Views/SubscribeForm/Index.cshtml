@using TAC.Utils.Helpers
@model tac.Models.SubscribeFormLabels
<div class="side-widget">
    <h4 class="text-uppercase">@Model.OurNextEvents</h4>
    <div class="sidebar">
        <div class="text">@Model.SubscribeToNewsletter</div>
        @using (Html.BeginForm())
        {
            @Html.FormHandler()

            <div>
                <input class="form-control" type="email" placeholder="your@email.com" name="email">
            </div>
            <input class="btn btn-default" type="submit" value="Subscribe">
        }
    </div>
</div>
