@using Sitecore.Mvc.Extensions
@model IEnumerable<tac.Models.NavigationItem>

@using (Html.EditFrame(RenderingContext.Current.ContextItem.Paths.FullPath, "RelatedEvents", null, null, null, null))
{
    <div class="side-widget">
        <h4 class="text-uppercase">Other events you will like</h4>
        <div class="sidebar">
            <ul class="nav nav-pills nav-stacked">
                @foreach (var navigationItem in Model)
                {
                    <li>
                        <a href="@navigationItem.Url">@navigationItem.Title</a>
                    </li>
                }
            </ul>
        </div>
    </div>
}
